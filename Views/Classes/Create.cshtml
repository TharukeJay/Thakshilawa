@model Thakshilawa.ViewModels.ClassViewModel
@inject XYZLaundry.Data.ApplicationDbContext Context
@inject UserManager<ApplicationUser> _userManager
@{ ViewData["Title"] = "New Class";
    Layout = "";

    var user = await _userManager.GetUserAsync(User);
    ViewData["FullName"] = $"{user.FirstName} {user.LastName}";
    var userRole = (await _userManager.GetRolesAsync(user)).FirstOrDefault();
    ViewData["IsAdmin"] = userRole.ToLower().Equals("super admin") ? true : false; }

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>XYZ Company - Laundry Management System</title>

    @await Html.PartialAsync("_BaseStyles")

</head>
<body class="hold-transition sidebar-mini layout-fixed layout-navbar-fixed layout-footer-fixed">
    <div class="wrapper">
        <!-- Navbar And Menu-->
        @await Html.PartialAsync("_BaseNavMenu")

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0 text-dark">@ViewData["Title"]</h1>
                        </div><!-- /.col -->
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item active">@ViewData["Title"]</li>
                            </ol>
                        </div><!-- /.col -->
                    </div><!-- /.row -->
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content-header -->
            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">

                    <div class="row">
                        <div class="col-md-12">
                            <form asp-controller="Classes" asp-action="Create" method="post" class="form-horizontal">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="SubjectName" class="control-label"></label>
                                            <input asp-for="SubjectName" placeholder="Subject Name" class="form-control" />
                                            <span asp-validation-for="SubjectName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Duration" class="control-label"></label>
                                            <input asp-for="Duration" placeholder="Duration" class="form-control" />
                                            <span asp-validation-for="Duration" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="LecturerID" class="control-label"></label>
                                            <input asp-for="LecturerID" placeholder="Lecturer ID" class="form-control" />
                                            <span asp-validation-for="LecturerID" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="SessionID" class="control-label"></label>
                                            <input asp-for="SessionID" placeholder="Session ID" class="form-control" />
                                            <span asp-validation-for="SessionID" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="StudentCapacity" class="control-label"></label>
                                            <input asp-for="StudentCapacity" placeholder="Student Capacity" class="form-control" />
                                            <span asp-validation-for="StudentCapacity" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="MonthlyFee" class="control-label"></label>
                                            <input asp-for="MonthlyFee" placeholder="1,000" class="form-control" />
                                            <span asp-validation-for="MonthlyFee" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="CourseDuration" class="control-label"></label>
                                            <input asp-for="CourseDuration" placeholder="12" class="form-control" />
                                            <span asp-validation-for="CourseDuration" class="text-danger"></span>
                                        </div>
                                    </div>




                                </div>
                                <div class="form-group d-flex">
                                    <div class="col-md-offset-2">
                                        <button type="submit" class="btn btn-primary">Create</button>
                                    </div>
                                    <div class="col-md-offset-2 ml-2">
                                        <a class="btn btn-secondary" asp-action="Index">Cancel</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <!--/. container-fluid -->
            </section>
            <!-- /.content -->

        </div>
        <!-- /.content-wrapper -->
        <!-- Main Footer -->
        <footer class="main-footer">
            <strong>Copyright &copy; 2020 <a href="#"></a>.</strong>
            All Rights Reserved.
        </footer>
    </div>


    @await Html.PartialAsync("_BaseScripts")
</body>

</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



